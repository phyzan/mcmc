{
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-O3",
                "-fopenmp",
                "-I/usr/include",
                "-I/usr/include/python3.12",
                "-Wall",
                "-fPIC",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}